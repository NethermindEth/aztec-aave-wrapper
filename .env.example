# =============================================================================
# Aztec Aave Wrapper - Environment Configuration
# Copy this file to .env and customize as needed
# =============================================================================

# =============================================================================
# Anvil L1 Configuration (Simulates Ethereum)
# =============================================================================

# Port for anvil L1 RPC (default: 8545)
ANVIL_L1_PORT=8545

# Chain ID for L1 (default: 31337 - standard Anvil)
ANVIL_L1_CHAIN_ID=31337

# NOTE: L1 block time is controlled by Aztec sandbox (12 seconds - Ethereum slot duration).
# Do not configure ANVIL_L1_BLOCK_TIME as it conflicts with sandbox initialization.

# =============================================================================
# Anvil Target Configuration (Simulates Arbitrum)
# =============================================================================

# Port for anvil target RPC (default: 8546)
ANVIL_TARGET_PORT=8546

# Chain ID for target chain (default: 31338)
ANVIL_TARGET_CHAIN_ID=31338

# Block time in seconds (default: 1)
ANVIL_TARGET_BLOCK_TIME=1

# =============================================================================
# Aztec Sandbox Configuration
# =============================================================================

# Aztec Docker image version (default: latest)
# Pin to specific version for reproducibility, e.g., 0.65.0
AZTEC_VERSION=latest

# PXE HTTP port (default: 8080)
PXE_PORT=8080

# Enable prover in PXE (default: false for faster local dev)
PXE_PROVER_ENABLED=false

# Debug logging filter (default: aztec:*, set to empty for less verbose)
# Examples: aztec:pxe, aztec:sequencer, aztec:l1
AZTEC_DEBUG=aztec:*

# Disable log output from Aztec node (default: false)
AZTEC_NODE_NO_LOGS=false

# =============================================================================
# Deployment Configuration
# =============================================================================

# Private key for deploying contracts (default: Anvil account 0)
# WARNING: Never use this key for mainnet!
DEPLOYER_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# Private key for test user 1 (default: Anvil account 1)
USER1_PRIVATE_KEY=0x59c6995e998f97a5a0044966f0945389dc9e86dae88c7a8412f4603b6b78690d

# Private key for test user 2 (default: Anvil account 2)
USER2_PRIVATE_KEY=0x5de4111afa1a4b94908f83103eb1f1706367c2e68ca870fc3fb9a804cdab365a

# =============================================================================
# RPC URLs (auto-configured based on ports above)
# =============================================================================

# These are primarily for scripts that run outside Docker
L1_RPC_URL=http://localhost:8545
TARGET_RPC_URL=http://localhost:8546
PXE_URL=http://localhost:8080

# =============================================================================
# Wormhole Configuration (Mocked in local dev)
# =============================================================================

# Wormhole chain ID for L1 (2 = Ethereum)
WORMHOLE_L1_CHAIN_ID=2

# Wormhole chain ID for target (23 = Arbitrum)
WORMHOLE_TARGET_CHAIN_ID=23

# Wormhole mock contract addresses (populated after running deploy-local)
# These are filled in by scripts/deploy-local.ts or scripts/deploy-mocks.ts
L1_WORMHOLE_CORE=
L1_WORMHOLE_TOKEN_BRIDGE=
L1_WORMHOLE_RELAYER=
TARGET_WORMHOLE_CORE=

# =============================================================================
# Deadline Configuration
# =============================================================================

# Minimum allowed deadline for cross-chain operations (5 minutes = 300 seconds)
MIN_DEADLINE=300

# Maximum allowed deadline for cross-chain operations (24 hours = 86400 seconds)
MAX_DEADLINE=86400

# =============================================================================
# Test Configuration
# =============================================================================

# Default deposit amount for tests (in token base units)
TEST_DEPOSIT_AMOUNT=1000000

# Default deadline offset in seconds (1 hour)
TEST_DEADLINE_OFFSET=3600

# Timeout for waiting on cross-chain messages (seconds)
CROSS_CHAIN_TIMEOUT=120
